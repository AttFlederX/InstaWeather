<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="InstaWeather.MasterTabbedPage"
            xmlns:local="clr-namespace:InstaWeather"
            Title="InstaWeather">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="settingsToolbarItem" Text="Settings" Activated="SettingsToolbarItem_Activated" Order="Secondary" />
    </ContentPage.ToolbarItems>
    
    <!--Pages can be added as references or inline-->
    <local:CurrentWeatherPage Title="Current" />
    <local:ForecastPage Title="Forecast" />
</TabbedPage>